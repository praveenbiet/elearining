# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# JavaScript/TypeScript files
*.js text diff=javascript
*.jsx text diff=javascript
*.ts text diff=typescript
*.tsx text diff=typescript

# JSON files
*.json text diff=json

# YAML files
*.yml text diff=yaml
*.yaml text diff=yaml

# Markdown files
*.md text diff=markdown

# Shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.rar binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Generated files
package-lock.json -text
yarn.lock -text
pnpm-lock.yaml -text
*.min.js -text
*.min.css -text
dist/** -text
build/** -text 